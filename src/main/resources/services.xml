<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
    
    <import resource="userDao.xml"/>
    <import resource="eventDao.xml"/>
    <import resource="auditoriumDao.xml"/>
    
    <bean id="userService" class="com.epam.spring.core.services.interfaces.UserService">
        <constructor-arg ref="dbUser"/>
    </bean>

    <bean id="eventService" class="com.epam.spring.core.services.interfaces.EventService">
        <constructor-arg ref="dbEvent"/>
    </bean>
    
    <bean id="auditoriumService" class="com.epam.spring.core.service.interfaces.AuditoriumService">
        <constructor-arg ref="dbAuditorium"/>
    </bean>

    <bean id="discountService" class="com.epam.spring.core.services.impls.DiscountServiceImplement">
        <property name="discountStrategyList">
            <list>
                <bean id="birthdayStrategy" class="com.epam.spring.core.Service.Implements.Discounts.BirthdayStrategy"/>
                <bean id="everyTenthTicket" class="com.epam.spring.core.Service.Implements.Discounts.EveryTenthStrategy"/>
            </list>
        </property>
    </bean>

    <bean id="bookingService" class="com.epam.spring.core.service.interfaces.BookingService">
        <constructor-arg index="0" ref="eventService"/>
        <constructor-arg index="1" ref="discountService"/>
    </bean>

</beans>
